@using Microsoft.AspNetCore.Identity
@using Jira.Areas.Identity.Data

@inject SignInManager<JiraUser> SignInManager
@inject UserManager<JiraUser> UserManager
 <script src="https://cdn.tailwindcss.com"></script>
<ul class="navbar-nav bg-color-dark">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a id="manage" class="nav-link text-white hover:bg-amber-500" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Witaj @UserManager.GetUserName(User)!</a>
            
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link text-white hover:bg-amber-500">Wyloguj</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-dark hover:bg-amber-500" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-dark hover:bg-amber-500" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
